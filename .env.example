# Database Configuration
# For running app on host machine (outside Docker):
# DGAT_DATABASE_URL=postgres://postgres:postgres@localhost:5433/dgat

# For running app inside Docker (in docker-compose):
DGAT_DATABASE_URL=postgres://postgres:postgres@postgres:5432/dgat

# Application Configuration
DGAT_PORT=8080

# Keycloak Configuration
DGAT_KEYCLOAK_URL=http://localhost:8081
DGAT_KEYCLOAK_REALM=dgat
DGAT_KEYCLOAK_CLIENT_ID=dgat-backend
DGAT_KEYCLOAK_CLIENT_SECRET=dev-secret

# JWT Configuration
DGAT_JWT_SECRET=dev-secret

# MinIO Configuration
DGAT_MINIO_ENDPOINT=http://localhost:9000
DGAT_MINIO_ACCESS_KEY=minioadmin
DGAT_MINIO_SECRET_KEY=minioadmin
DGAT_MINIO_BUCKET_NAME=reports
DGAT_MINIO_USE_SSL=false
